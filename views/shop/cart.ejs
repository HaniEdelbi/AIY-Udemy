<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">

</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main class="cart">
    <div class="cart__container">
      <% if(products.length > 0) { %>
      <ul class="cart__list">
        <% products.forEach(p => { %>
        <li class="cart__item card full-width">
          <!-- Ensure full-width class is applied -->
          <div class="card__header">
            <h2 class="cart__title">
              <span class="cart__name"><%= p.title %></span>
            </h2>
          </div>
          <div class="card__content">
            <p class="cart__qty">Quantity: <%= p.cartItem.quantity %></p>
          </div>
          <form class="cart__actions" action="/cart-delete-item" method="post">
            <input type="hidden" name="productId" value="<%= p.id %>">
            <button class="btn btn--danger" type="submit">Delete</button>
          </form>
        </li>
        <% }); %>
      </ul>
      <div class="centered"> <!-- Centering div -->
        <form action="/create-order" method="post">
          <button class="btn btn--success order-now" type="submit">Order Now!</button> <!-- Added order-now class -->
        </form>
      </div>
      <% } else { %>
      <h1 class="cart__empty">No Items in Cart!</h1>
      <% } %>
    </div>
  </main>
  <%- include('../includes/end.ejs') %>