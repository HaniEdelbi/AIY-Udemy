<header class="main-header">
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <li class="main-header__item">
        <a class="nav-link <%= path === '/' ? 'active' : '' %>" href="/">Shop</a>
      </li>
      <li class="main-header__item">
        <a class="nav-link <%= path === '/products' ? 'active' : '' %>" href="/products">Products</a>
      </li>

      <% if (isAuthenticated === true) { %>
      <li class="main-header__item">
        <a class="nav-link <%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
      </li>
      <li class="main-header__item">
        <a class="nav-link <%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
      </li>

      <li class="main-header__item">
        <a class="nav-link <%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">
          Add
        </a>
      </li>
      <li class="main-header__item">
        <a class="nav-link <%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">
          Admin Products
        </a>
      </li>
      <% } %>
    </ul>

    <ul class="main-header__item-list main-header__item-list--right">
      <% if (!isAuthenticated) { %>
      <li class="main-header__item">
        <a href="/login" class="nav-link <%= path === '/login' ? 'active' : '' %>">Login</a>
      </li>
     <li class="main-header__item">
  <a
    href="/signup"
    class="nav-link <%= path === '/signup' ? 'active' : '' %>"
  >
    Signup
  </a>
</li>
      <% } else { %>
      <li class="main-header__item">
        <form action="/logout" method="post" class="nav-form">
          <button type="submit" class="nav-link nav-link--button">
            Logout
          </button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>